<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Set default font for the entire app -->
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@android:color/black</item> <!-- Optional text color -->
    </style>




    <!-- res/values/styles.xml -->
    <style name="CustomEditTextStyle">
        <item name="android:fontFamily">@font/poppins</item>
        <item name="android:textColor">@android:color/black</item> <!-- Optional: Set text color globally -->
        <item name="android:textColorHint">@android:color/darker_gray</item> <!-- Optional: Set hint color -->
    </style>


    <!-- res/values/styles.xml -->
    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:fontFamily">@font/poppins</item>
    </style>



</resources>
